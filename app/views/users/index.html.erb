<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate  %>  <%# ページネーション  %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>

